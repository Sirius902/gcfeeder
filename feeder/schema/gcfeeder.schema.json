{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Sirius902/gcfeeder/main/feeder/schema/gcfeeder.schema.json",
    "title": "gcfeeder config",
    "description": "Configuration for gcfeeder",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "default_set": {
            "description": "The default configuration set",
            "type": "string"
        },
        "config_sets": {
            "description": "A list of configurations",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "config": {
                        "type": "object",
                        "properties": {
                            "driver": {
                                "type": "string",
                                "enum": [
                                    "vigem"
                                ]
                            },
                            "vigem_config": {
                                "type": "object",
                                "properties": {
                                    "pad": {
                                        "type": "string",
                                        "enum": [
                                            "ds4",
                                            "x360"
                                        ]
                                    },
                                    "trigger_mode": {
                                        "type": "string",
                                        "enum": [
                                            "analog",
                                            "digital",
                                            "combination",
                                            "stick_click"
                                        ]
                                    }
                                },
                                "required": [
                                    "pad",
                                    "trigger_mode"
                                ],
                                "additionalProperties": false
                            },
                            "calibration": {
                                "description": "Calibration data",
                                "anyOf": [
                                    {
                                        "type": "null"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "main_stick": {
                                                "type": "object",
                                                "properties": {
                                                    "notch_points": {
                                                        "type": "array",
                                                        "minItems": 8,
                                                        "maxItems": 8,
                                                        "items": {
                                                            "type": "array",
                                                            "minItems": 2,
                                                            "maxItems": 2,
                                                            "items": {
                                                                "type": "integer",
                                                                "minimum": 0,
                                                                "maximum": 255
                                                            }
                                                        }
                                                    },
                                                    "stick_center": {
                                                        "type": "array",
                                                        "minItems": 2,
                                                        "maxItems": 2,
                                                        "items": {
                                                            "type": "integer",
                                                            "minimum": 0,
                                                            "maximum": 255
                                                        }
                                                    }
                                                },
                                                "required": [
                                                    "notch_points",
                                                    "stick_center"
                                                ],
                                                "additionalProperties": false
                                            },
                                            "c_stick": {
                                                "type": "object",
                                                "properties": {
                                                    "notch_points": {
                                                        "type": "array",
                                                        "minItems": 8,
                                                        "maxItems": 8,
                                                        "items": {
                                                            "type": "array",
                                                            "minItems": 2,
                                                            "maxItems": 2,
                                                            "items": {
                                                                "type": "integer",
                                                                "minimum": 0,
                                                                "maximum": 255
                                                            }
                                                        }
                                                    },
                                                    "stick_center": {
                                                        "type": "array",
                                                        "minItems": 2,
                                                        "maxItems": 2,
                                                        "items": {
                                                            "type": "integer",
                                                            "minimum": 0,
                                                            "maximum": 255
                                                        }
                                                    }
                                                },
                                                "required": [
                                                    "notch_points",
                                                    "stick_center"
                                                ],
                                                "additionalProperties": false
                                            }
                                        },
                                        "required": [
                                            "main_stick",
                                            "c_stick"
                                        ],
                                        "additionalProperties": false
                                    }
                                ]
                            }
                        },
                        "required": [
                            "driver",
                            "vigem_config",
                            "calibration"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "name",
                    "config"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "default_set",
        "config_sets"
    ],
    "additionalProperties": false
}