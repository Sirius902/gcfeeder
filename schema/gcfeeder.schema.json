{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/Sirius902/gcfeeder/main/schema/gcfeeder.schema.json",
    "title": "gcfeeder config",
    "description": "Configuration for gcfeeder",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "current_profile": {
            "description": "The configuration profile to be used",
            "type": "string"
        },
        "profiles": {
            "description": "The list of configuration profiles",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "config": {
                        "type": "object",
                        "properties": {
                            "driver": {
                                "type": "string",
                                "enum": [
                                    "vigem"
                                ]
                            },
                            "vigem_config": {
                                "type": "object",
                                "properties": {
                                    "pad": {
                                        "type": "string",
                                        "enum": [
                                            "ds4",
                                            "x360"
                                        ]
                                    },
                                    "trigger_mode": {
                                        "type": "string",
                                        "enum": [
                                            "analog",
                                            "digital",
                                            "combination",
                                            "stick_click"
                                        ]
                                    }
                                },
                                "required": [
                                    "pad",
                                    "trigger_mode"
                                ],
                                "additionalProperties": false
                            },
                            "calibration": {
                                "description": "Calibration settings",
                                "type": "object",
                                "properties": {
                                    "enabled": {
                                        "type": "boolean"
                                    },
                                    "data": {
                                        "description": "Calibration data",
                                        "anyOf": [
                                            {
                                                "type": "null"
                                            },
                                            {
                                                "type": "object",
                                                "properties": {
                                                    "main_stick": {
                                                        "type": "object",
                                                        "properties": {
                                                            "notch_points": {
                                                                "type": "array",
                                                                "minItems": 8,
                                                                "maxItems": 8,
                                                                "items": {
                                                                    "type": "array",
                                                                    "minItems": 2,
                                                                    "maxItems": 2,
                                                                    "items": {
                                                                        "type": "integer",
                                                                        "minimum": 0,
                                                                        "maximum": 255
                                                                    }
                                                                }
                                                            },
                                                            "stick_center": {
                                                                "type": "array",
                                                                "minItems": 2,
                                                                "maxItems": 2,
                                                                "items": {
                                                                    "type": "integer",
                                                                    "minimum": 0,
                                                                    "maximum": 255
                                                                }
                                                            }
                                                        },
                                                        "required": [
                                                            "notch_points",
                                                            "stick_center"
                                                        ],
                                                        "additionalProperties": false
                                                    },
                                                    "c_stick": {
                                                        "type": "object",
                                                        "properties": {
                                                            "notch_points": {
                                                                "type": "array",
                                                                "minItems": 8,
                                                                "maxItems": 8,
                                                                "items": {
                                                                    "type": "array",
                                                                    "minItems": 2,
                                                                    "maxItems": 2,
                                                                    "items": {
                                                                        "type": "integer",
                                                                        "minimum": 0,
                                                                        "maximum": 255
                                                                    }
                                                                }
                                                            },
                                                            "stick_center": {
                                                                "type": "array",
                                                                "minItems": 2,
                                                                "maxItems": 2,
                                                                "items": {
                                                                    "type": "integer",
                                                                    "minimum": 0,
                                                                    "maximum": 255
                                                                }
                                                            }
                                                        },
                                                        "required": [
                                                            "notch_points",
                                                            "stick_center"
                                                        ],
                                                        "additionalProperties": false
                                                    }
                                                },
                                                "required": [
                                                    "main_stick",
                                                    "c_stick"
                                                ],
                                                "additionalProperties": false
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "enabled",
                                    "data"
                                ],
                                "additionalProperties": false
                            },
                            "ess": {
                                "description": "ESS adapter settings",
                                "type": "object",
                                "properties": {
                                    "inversion_mapping": {
                                        "anyOf": [
                                            {
                                                "type": "null"
                                            },
                                            {
                                                "type": "string",
                                                "enum": [
                                                    "oot-vc",
                                                    "mm-vc",
                                                    "z64-gc"
                                                ]
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "inversion_mapping"
                                ],
                                "additionalProperties": false
                            },
                            "analog_scale": {
                                "description": "Analog stick input multiplier",
                                "type": "number",
                                "minimum": 0.0
                            },
                            "rumble": {
                                "description": "Rumble setting",
                                "type": "string",
                                "enum": [
                                    "on",
                                    "off",
                                    "emulator"
                                ]
                            },
                            "input_server": {
                                "type": "object",
                                "properties": {
                                    "enabled": {
                                        "type": "boolean"
                                    },
                                    "port": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 65535
                                    }
                                },
                                "required": [
                                    "enabled",
                                    "port"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "required": [
                            "driver",
                            "vigem_config",
                            "calibration",
                            "ess",
                            "analog_scale",
                            "rumble",
                            "input_server"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "name",
                    "config"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "current_profile",
        "profiles"
    ],
    "additionalProperties": false
}